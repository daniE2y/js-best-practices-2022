---
const { platform, url, urlSource } = Astro.props;
---

<a class="a-dps" target="_blank" href={url}>
    <img alt={platform} src={urlSource} />
</a>

<style>
    a {
        margin: auto;
        max-width: 60ch;
        height: 3ch;
    }
    .a-dps {
        font-family: "MonoLisaCustom-Medium";
        font-weight: 900;
        font-size: large;
        text-decoration: none;
        color: #222;
    }
    .a-dps:hover {
        background-color: #fdcc82;
        border-radius: 3rem;
    }
    img {
        height: 2rem;
        width: 2rem;
    }
</style>
