<Layout title="Articles - @danisanga">
  <Header />

  <Separator />

  <main>
    <h1>{frontmatter.title}</h1>
    <p><i>Written by {frontmatter.author}</i></p>

    <img src={frontmatter.image.url} alt={frontmatter.image.alt} />

    <slot />
  </main>

  <Separator />

  <Footer />
</Layout>

<style>
